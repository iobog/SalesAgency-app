@page
@model MyApp.Namespace.IndexModel
@{
}

<h2>Comenzi</h2>
<a class="btn btn-primary" asp-area="" asp-page="./Create">Comanda noua</a>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Client</th>
      <th>Data</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var order in Model.Orders)
    {
      <tr>
        <td>@order.Id</td>
        <td>@order.Client</td>
        <td>@order.CreatedAt</td>
        <td>@order.Total</td>
      </tr>
    }
  </tbody>
</table>

@if (!Model.Orders.Any())
{
  <div class="alert alert-primary" role="alert">
    Fara comenzi.
  </div>
}